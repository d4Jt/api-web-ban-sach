{
   "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "outDir": "build",
      "allowJs": true,
      // "watch": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "noImplicitAny": true,
      "declaration": true,
      "rootDir": "src",
      "typeRoots": ["node_modules/@types", "typings.d.ts"]
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules", "dist", "build"]
}
